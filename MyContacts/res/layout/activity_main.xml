<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity" >

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/id_top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x197"
        android:background="@drawable/top_tab_bg"
        tl:tl_iconHeight="@dimen/x42"
        tl:tl_iconWidth="@dimen/y62"
        tl:tl_indicator_color="#ffffff"
        tl:tl_indicator_height="@dimen/x6"
        tl:tl_indicator_width="-1dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_textSelectColor="#ffffff"
        tl:tl_textUnselectColor="#ffffff"
        tl:tl_textsize="18sp"
        tl:tl_underline_height="0dp" />
    
    <FrameLayout 
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_top_tab">
        
    </FrameLayout>
    

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/id_top_tab"
        android:background="@drawable/top_tab_bg_shadow" />

</RelativeLayout>