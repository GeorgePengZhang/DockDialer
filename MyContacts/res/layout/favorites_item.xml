<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/common_btn_blue"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/call_type_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/calllog_callout_icon"
        android:visibility="invisible" />

    <com.flyco.tablayout.widget.CircleImageView
        android:id="@+id/id_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/calllog_contacts_img_default" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="abc"
        android:gravity="left"
        android:textColor="#888888"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/id_callog_info"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/calllog_info_icon" />

</LinearLayout>