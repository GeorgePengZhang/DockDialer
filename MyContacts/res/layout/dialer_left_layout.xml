<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialer_left_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/x394"
        android:layout_height="@dimen/x394"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/dialer_left_user_img_bg" >

        <ImageView
            android:layout_width="@dimen/x217"
            android:layout_height="@dimen/x217"
            android:layout_centerInParent="true"
            android:src="@drawable/dialer_left_user_img_default" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_callstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:text="Incoming"
        android:textColor="#f0f0f0f0"
        android:textSize="26sp" />

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/CallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="start"
        android:gravity="center"
        android:singleLine="true"
        android:text="James Hade Well"
        android:textColor="#88333333"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/ib_sound"
        android:layout_width="@dimen/y130"
        android:layout_height="@dimen/y130"
        android:layout_marginTop="@dimen/x58"
        android:background="@drawable/dialer_left_mute_off" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x38"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:background="@drawable/dialer_left_volume_btn"
            android:src="@drawable/dialer_left_volume_sub" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/dialer_left_volume_1" />

        <ImageButton
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:background="@drawable/dialer_left_volume_btn"
            android:clickable="true"
            android:src="@drawable/dialer_left_volume_add" />
    </LinearLayout>

</LinearLayout>